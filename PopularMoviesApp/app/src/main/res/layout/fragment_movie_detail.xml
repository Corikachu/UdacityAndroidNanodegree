<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/detailBackdropImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/movie_image_name"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/detailTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/detailBackdropImage"
            android:layout_margin="15dp"
            android:text="@string/hello_world"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <RatingBar
            android:id="@+id/detailRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailBackdropImage"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/movie_item_margin"
            android:isIndicator="true" />

        <TextView
            android:id="@+id/detailReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailRatingBar"
            android:layout_margin="@dimen/movie_item_margin"
            android:text="@string/hello_world"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/detailOverviewTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailReleaseDate"
            android:layout_margin="@dimen/movie_item_margin"
            android:text="@string/hello_world"
            android:textColor="@color/secondaryText" />

        <TextView
            android:id="@+id/detailReviewAuthorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailOverviewTextView"
            android:layout_margin="@dimen/movie_item_margin"
            android:text="@string/hello_world"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/detailReviewContentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailReviewAuthorTextView"
            android:layout_margin="@dimen/movie_item_margin"
            android:text="@string/hello_world"
            android:textColor="@color/secondaryText" />

        <Button
            android:id="@+id/detailVideoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailReviewContentTextView"
            android:layout_margin="@dimen/movie_item_margin"
            android:text="@string/video_button" />

        <Button
            android:id="@+id/detailFavorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailVideoButton"
            android:layout_margin="@dimen/movie_item_margin"
            android:text="@string/sort_favorites" />

    </RelativeLayout>
</ScrollView>